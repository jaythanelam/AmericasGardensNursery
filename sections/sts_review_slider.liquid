{% comment %} Please do not edit this file. It is automatically updated by Social Testimonial Slider app.{% endcomment %}
<div class="srs-testimonial-container" style="margin:{{section.settings.margintop}}px {{section.settings.marginlr}}px {{section.settings.marginbottom}}px;  " data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
  <{{ section.settings.titlehtmltype}} style="text-align: {{ section.settings.titlehtmlloc}};" class="sts_title">{{ section.settings.title}}</{{ section.settings.titlehtmltype}}>
    <div class="feature_divider"></div>
{% endif %}
<div class="srs_slider" id="srs_template_{{ section.settings.ststtemplateid}}"></div>
</div>
{% schema %}
{
"name": "Social Testimonial Slider",
"class": "srs-section",
"settings": [{
    "type": "text",
    "id": "title",
    "label": "Heading",
    "default": "Testimonials"
    },
    {
    "type": "select",
    "id": "titlehtmltype",
    "label": "Heading html Type",
    "default": "h2",
    "options": [
      {
      "label": "h1",
      "value": "h1"
      },
      {
      "label": "h2",
      "value": "h2"
      },
      {
      "label": "h3",
      "value": "h3"
      },
      {
      "label": "h4",
      "value": "h4"
      },
      {
      "label": "h5",
      "value": "h5"
      },
      {
      "label": "div",
      "value": "div"
      }
    ]
    },
    {
    "type": "select",
    "id": "titlehtmlloc",
    "label": "Heading Location",
    "default": "center",
    "options": [
      {
      "label": "Center",
      "value": "center"
      },
      {
      "label": "Left",
      "value": "left"
      },
      {
      "label": "Right",
      "value": "right"
      }
    ]
    },
    {
    "type": "select",
    "id": "ststtemplateid",
    "label": "Choose Review Template","default": "10415",
    "options": [{"label": "General","value": "10415"}]
  },
	{
        "type": "range",
        "id": "margintop",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Margin Top",
        "default": 0
      }
,
	{
        "type": "range",
        "id": "marginlr",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Margin Left Right",
        "default": 40
      }
,
	{
        "type": "range",
        "id": "marginbottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Margin Bottom",
        "default": 0,
        "info": "You may need to click the Save button in the top right to see your changes."
      }

],
"presets": [
  {
  "name": "Social Testimonial Slider",
  "category": "STS Sections"
  }
]
}
{% endschema %}
