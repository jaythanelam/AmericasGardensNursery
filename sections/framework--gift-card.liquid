{%- liquid
  assign logo_image = section.settings.logo-image
  assign logo_height = section.settings.logo-height
  assign formatted_initial_value = gift_card.initial_value | money_without_trailing_zeros: gift_card.currency
  assign formatted_initial_value_stripped = formatted_initial_value | strip_html
-%}

<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="format-detection" content="telephone=no">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>
      {{ 'gift_cards.issued.title' | t: value: formatted_initial_value_stripped, shop: shop.name }}
    </title>
    <meta name="description" content="{{ 'gift_cards.issued.subtext' | t }}">

    {{ 'styles.gift-card.css' | asset_url | stylesheet_tag }}
    {{ 'vendor/qrcode.js' | shopify_asset_url | script_tag }}
    <link href="//fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">

    <script type='text/javascript'>
      function selectText(element) {
        const doc = document;
        const text = doc.getElementById(element);

        if (doc.body.createTextRange) { // ms
          const range = doc.body.createTextRange();
          range.moveToElementText(text);
          range.select();
        } else if (window.getSelection) { // moz, opera, webkit
          const selection = window.getSelection();
          const range = doc.createRange();
          range.selectNodeContents(text);
          selection.removeAllRanges();
          selection.addRange(range);
        }
      }
    </script>

    {% if logo_image %}
      <style>
        header[role='banner'] img {
          max-height: {{ logo_height }}px;
        }
      </style>
    {% endif %}

  </head>

  <body>
    <div class="wrap">

      <header role="banner" id="header">
        {% if logo_image %}
          {%
            render 'framework--logo',
            logo: logo_image,
            height_range: logo_height
          %}
        {% else %}
          <a
            href="{{ shop.url }}"
            class="logo"
          >
            {{ shop.name }}
          </a>
        {% endif %}
        <a href="{{ shop.url }}" class="shop-url">{{ shop.url | remove: 'http://' }}</a>
      </header>

      <main role="main">
        <div
          id="gift-card-outer-container"
          {% if gift_card.expired or gift_card.enabled != true %}
            class="disabled"
          {% endif %}
        >
          <div id="gift-card-inner-container">

            <header id="gift-card-header">
              <h2>{{ 'gift_cards.issued.subtext' | t }}</h2>
              {% unless gift_card.enabled %}
                <span class="tag">{{ 'gift_cards.issued.disabled' | t }}</span>
              {% endunless %}
              {% assign gift_card_expiry_date = gift_card.expires_on | date: format: 'month_day_year' %}
              {% if gift_card.expired and gift_card.enabled %}
                <span class="tag">{{ 'gift_cards.issued.expired' | t: expiry: gift_card_expiry_date }}</span>
              {% endif %}
              {% if gift_card.expired != true and gift_card.expires_on and gift_card.enabled %}
                <span class="tag light">{{ 'gift_cards.issued.active' | t: expiry: gift_card_expiry_date }}</span>
              {% endif %}
            </header>

            <div id="gift-card-holder">
              <div class="corner top-left"></div>
              <div class="corner bottom-right"></div>
              <div class="corner top-right"></div>
              <div class="corner bottom-left"></div>
              <div id="gift-card">
                <img
                  src="{{ 'gift-card/card.jpg' | shopify_asset_url }}"
                  alt="Gift card illustration"
                >
                {% assign initial_value_size = formatted_initial_value | size %}
                <div
                  class="{% if initial_value_size > 6 %}medium{% endif %}"
                  id="gift-card-amount"
                >
                  {% if gift_card.balance != gift_card.initial_value %}
                    <span class="tooltip-container"><span class="tooltip-label money">{{ gift_card.balance | money }} <small>left</small></span><span class="tooltip-triangle"></span></span>
                  {% endif %}
                  <strong>{{ formatted_initial_value }}</strong>
                </div>
                {% assign code_size = gift_card.code | format_code | size %}
                <div
                  class="{% if code_size <= 25 %}large{% elsif code_size > 25 and code_size <= 30 %}medium{% else %}small{% endif %}"
                  id="gift-card-code-outer"
                  onclick="selectText('gift-card-code-digits');"
                >
                  <div id="gift-card-code-inner">
                    <strong id="gift-card-code-digits">{{ gift_card.code | format_code }}</strong>
                  </div>
                </div>
              </div>
            </div>

            <div id="gift-card-instructions">
              <p>{{ 'gift_cards.issued.redeem' | t }}</p>
            </div>

            <div id="QrCode" style="width: 120px; margin: 0 auto 20px;"></div>
            <script>
              new QRCode(document.getElementById('QrCode'), {
                text: "{{ gift_card.qr_identifier }}",
                width: 120,
                height: 120
              });
            </script>

            <div id="gift-card-actions">
              <a href="{{ shop.url }}" class="btn center" target="_blank">
                {{ 'gift_cards.issued.shop_link' | t }}
              </a>
              <a href="#" class="action-link left" onclick="window.print();">
                <i class="ico-16 print"></i>{{ 'gift_cards.issued.print' | t }}
              </a>
            </div>

          </div>
        </div>
      </main>

      <footer class="giftcard__footer" role="contentinfo">
        {% if gift_card.pass_url %}
          <a
            class="add-to-apple-wallet"
            style="text-align: center;"
            href="{{ gift_card.pass_url }}"
          >
            <img
              style="display: inline-block;"
              src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}"
              width="120"
              height="40"
              alt="{{ 'gift_cards.issued.add_to_apple_wallet' | t }}"
            >
          </a>
        {% endif %}
      </footer>

    </div>
  </body>
</html>

{% schema %}
  {
    "name": "Gift Card",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo-image",
        "label": "Image",
        "info": "1600 x 200px max"
      },
      {
        "label": "Image height",
        "id": "logo-height",
        "type": "range",
        "min": 15,
        "max": 100,
        "step": 5,
        "default": 50,
        "info": "This is referring to the natural height and should be half the height of the image you uploaded to ensure it stays sharp on retina screens."
      }
    ]
  }
{% endschema %}