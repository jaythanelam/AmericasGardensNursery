{%- assign section_color = section.settings.color_scheme -%}


{%- assign custom_grid_width = 'lg--up--three-quarters' -%}
{%- if section.settings.title == blank and section.settings.description == blank and section.settings.cta_url == blank -%}
  {%- assign custom_grid_width = 'lg--up--one-whole' -%}
{%- endif -%}

<section class="custom section-with-padding color--{{ section_color }}-text bg--{{ section_color }}-background" data-section-type="custom" data-section-id="{{ section.id }}">
  <div class="max-site-width lg--up--px3">
    <div class="grid">

      {% unless section.settings.title == blank and section.settings.description == blank and  section.settings.cta_url == blank %}
        <div class="grid__item lg--up--one-quarter">
          <div class="pb3 pl2 pr4 lg--up--px0">

            {% if section.settings.title  %}
              <h2 class="f--heading font-size__heading">{{ section.settings.title }}</h2>
            {% endif %}

            {% if section.settings.subheading != blank %}
              <div class="font-size__basic">
                {{ section.settings.subheading }}
              </div>
            {% endif %}

            {% if section.settings.cta_url %}
            <a class="inline-block homepage-more-link  font-size__basic  f--accent link-underline--{{ section_color }}  hover-underline--{{ section_color }} " href="{{ section.settings.cta_url }}" >
              {{ section.settings.cta_text }}
            </a>
            {% endif %}

          </div>
        </div>
      {% endunless %}

      <div class="grid__item {{ custom_grid_width }}">
        <div class="px2 lg--up--px0">
          {{ section.settings.custom_html }}
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "class": "section-video",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Heading",
      "default": "Custom HTML"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subheading goes here"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Optional: Call to action URL"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to action button text",
      "default": "Shop Now"
    },
    {
      "type": "textarea",
      "id": "custom_html",
      "label": "Custom HTML"
    },
    {
      "type":      "header",
      "content":   "Color"
    },
    {
       "type": "select",
       "id": "color_scheme",
       "label": "Color scheme",
       "options": [
          { "value": "primary", "label": "Primary"},
          { "value": "secondary", "label": "Secondary"},
          { "value": "tertiary", "label": "Tertiary"}
       ]
    }
  ],
  "presets": [
    {
      "name": "Custom HTML",
      "category": "Advanced Layout"
    }
  ]
}
{% endschema %}
