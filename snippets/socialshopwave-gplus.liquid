{% if shop.metafields.ssw.settings.login_gplus_client_id <> '' or shop.metafields.ssw.settings.our_gplus_app == nil or shop.metafields.ssw.settings.our_gplus_app == '' or shop.metafields.ssw.settings.our_gplus_app == 0 %}
  <script id="gw-gapi-load-script">
      var clientIdMetaTag = document.createElement('meta');
      var scopeMetaTag = document.createElement('meta');
      var script = document.createElement('script');
      clientIdMetaTag.name = "google-signin-clientid";
      clientIdMetaTag.content = "{{ shop.metafields.ssw.settings.login_gplus_client_id }}";
      scopeMetaTag.name = "google-signin-scope";
      scopeMetaTag.content = "profile email";
      script.src = "https://apis.google.com/js/api:client.js?onload=gwGapiLoad";
      document.head.appendChild(clientIdMetaTag);
      document.head.appendChild(scopeMetaTag);
      document.head.appendChild(script);
      document.getElementById("gw-gapi-load-script").remove();
  </script>
{% endif %}