{% assign customer_locale = shop.locale | prepend: 'lang_' %}
{% unless shop.metafields.ssw[customer_locale] %}
  {% for published_locale in shop.published_locales %}
    {% if published_locale.primary == true %}
      {% assign customer_locale = published_locale.iso_code | prepend: 'lang_' %}
    {% endif %}
  {% endfor %}
{% endunless %}
<div id="ssw-suggest-login" data-show-time="0">
  <button class="ssw-close">&times;</button>
  <span class="ssw-suggest-text ssw-control-group"></span>
  <span><a class="btn button ssw-login-btn" href="/account/login">{{ shop.metafields.ssw[customer_locale].value.log_in }}</a></span>
</div>