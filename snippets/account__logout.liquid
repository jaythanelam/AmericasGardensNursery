<div class="font-size--sm mt3">
  <ul class="list--reset">
    <li>
      {% if customer.first_name != blank %}
        {% capture first_name %}{{ customer.first_name }}{% endcapture %}
        <a href="{{ routes.account_url }}">{{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }}</a>
      {% else %}
        <a href="{{ routes.account_url }}">{{ 'layout.customer.account' | t }}</a>
      {% endif %}
    </li>
    <li class="mt1">
      <a href="{{ routes.account_logout_url }}" {% if section.settings.show_search_sidebar == false %}data-mobile-active-last-item{% endif %}>{{ 'layout.customer.log_out' | t }}</a>
    </li>
  </ul>
</div>