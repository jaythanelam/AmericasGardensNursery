<!-- /snippets/product-grid-item.liquid -->
{%- unless section_color -%}
  {%- assign section_color = 'primary' -%}
{%- endunless -%}

<a href="#">
  {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
  <div class="placeholder-img-wrapper bg--{{ section_color }}-placeholder full--w">
    <div style="padding-top:{% cycle '66.6', '133.33', '100' %}%;" class="relative">
      {{ 'product-' | append: current | placeholder_svg_tag: '' }}
    </div>
  </div>
  <p class="color--{{ section_color }}-text m0 mt2">{{ 'homepage.onboarding.product_title' | t }}</p>
  <p class="color--{{ section_color }}-meta m0">
    {{ 1999 | money }}
  </p>
</a>